<% content_for :title, "New movie" %>

<h1>Add a Movie</h1>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= render "form", movie: @movie %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to "Back to movies", movies_path(params: { sort: cookies[:sort], direction: cookies[:direction] }), class: "btn btn-primary" %>
  </div>
</div>
